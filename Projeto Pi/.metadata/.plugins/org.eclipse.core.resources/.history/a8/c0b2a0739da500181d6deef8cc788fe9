<?php 

$Usuario = new Usuario();
$UsuarioRepositorio = new UsuarioRepositorio();

$listaUsuario = $UsuarioRepositorio->listaUsuarios();

$contador =0;

$quant = $UsuarioRepositorio->contarTodosUsuarios();
?>

<h3>Lista de Superior</h3>
<table border="1" cellpadding="0" cellspacing="0">
<tr>
<td>&nbsp;ID&nbsp;</td>
<td>&nbsp;NOME&nbsp;</td>
<td>&nbsp;LOGIN&nbsp;</td>
</tr>

<?php 
while ($contador < $quant){
    $Usuario = $listaUsuario[$contador];
    echo "<tr>";
    echo "<td>&nbsp;".$Usuario->getId()."</td>";
    echo "<td>&nbsp;<a href='listaPorSuperior2.php?id=".$Usuario->getId().
                                    "'>".$Usuario->getNome()."</a>&nbsp;</td>";
    echo "<td>&nbsp;".$Usuario->getLogin()."</td>";
    echo "</tr>";
  
    $contador++;
}

?>
</table>

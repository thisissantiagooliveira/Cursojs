$Ativo->setCodigobarra($codigobarra);

$AtivoRepositorio = new AtivoRepositorio();
$Existe = $AtivoRepositorio->existeAtivo($Ativo);

if($Existe != TRUE){
   
    $retorno = $AtivoRepositorio->cadastrarAtivo($Ativo);

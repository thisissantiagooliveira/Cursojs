<?php 

$nome = $_GET['nome'];
$login = $_GET['login'];
$situacao = $_GET['situacao'];
$id = $_GET['id'];

$Usuario = new Usuario();
$Usuario->setNome($nome);
$Usuario->setLogin($login);
$Usuario->setSituacao($situacao);
$Usuario->setId($id);
$UsuarioRepositorio = new UsuarioRepositorio();
$retorno = $UsuarioRepositorio->bloquearUsuario($Usuario);

if($retorno == TRUE){
    echo "Esse Usuario foi bloqueado com sucesso";
}
else {
    echo "Falha no Bloqueio do Usuario";
}

